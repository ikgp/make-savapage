. `dirname $0`/.server-common.inc.sh
. `dirname $0`/.java-version.inc.bsh

if [ -z "${USER}" ]; then
        USER=`whoami`
fi
if [ -n "${USER}" -a "${USER}" != "${HOST_USER}" ]; then
        echo "You must be the ${HOST_USER} to run this program!"
        echo "Try:  sudo su ${HOST_USER}"
        echo
        exit
fi

readonly _java_version=$(_get_java_version)
if [ ${_java_version} -gt "8" ]; then
  JVM_X_ARGS="--add-modules java.xml.bind"
else
  JVM_X_ARGS=""
fi

export CLASSPATH
java \
        -Djava.io.tmpdir=${TMP_DIR} \
        -Dserver.home=${SERVER_HOME} \
        -Xmx256M ${JVM_X_ARGS} \
    org.savapage.core.cli.AppDb \
    "$@"
